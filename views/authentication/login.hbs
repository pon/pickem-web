<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form class="form" action="/login" method="POST">
      <h1>Sign In</h1>

      {{#if error}}
        <div class="alert alert-danger">
          {{error}}
        </div>
      {{/if}}

      <div class="form-group">
        <label>Email</label>
        <input name="email" type="text" required id="login" size="30" class="form-control">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" required id="password" class="form-control">
      </div>
      <hr>
      <div class="form-group">
        <input type="submit" class="btn btn-blue-inverse pull-right" value="Sign In">
      </div>
    </form>
  </div>
</div>
